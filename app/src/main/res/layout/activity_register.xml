<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="50dp"
            android:fontFamily="@font/manrope_extrabold"
            android:gravity="center"
            android:letterSpacing="0.08"
            android:text="RentWise"
            android:textColor="#A7B2C6"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="34dp"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"

                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Firstname"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/font"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/risFirstname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input"
                    android:hint="Enter FirstName"
                    android:padding="8dp"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:layout_marginBottom="10dp"
                    android:text="Lastname"
                    android:textColor="@color/font"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/risLastname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input"
                    android:hint="Enter LastName"
                    android:padding="8dp"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="34dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="Phone Number"
                android:textColor="@color/font"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/risPhonenumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="16dp"
                android:background="@drawable/bg_input"
                android:hint="Enter PhoneNumber"
                android:inputType="phone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="34dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_semibold"
                android:text="E-mail"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/risEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Enter Email"
                android:inputType="text"
                android:padding="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="34dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Password"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/risPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Enter Password"
                android:inputType="textPassword"
                android:padding="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="34dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Comfirm Password"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/risConPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:hint="Comfirm Password"
                android:inputType="textPassword"
                android:padding="16dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="34dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_dash">

                <!-- ImageView -->
                <ImageView
                    android:id="@+id/risProfilePicture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Profile Picture"
                    android:scaleType="centerCrop" />

                <!-- Text Overlay (Camera Icon + Text) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_camera"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Profile Picture"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textColor="@color/font"
                    android:letterSpacing="0.01" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bg_dash">

                <!-- ImageView -->
                <ImageView
                    android:id="@+id/risID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Government ID"
                    android:scaleType="centerCrop" />

                <!-- Overlay Text with Icon -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableTop="@mipmap/ic_camera"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Government ID"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:textColor="@color/font"
                    android:letterSpacing="0.01" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="34dp"
            >

            <Button
                android:id="@+id/btnRenters"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:letterSpacing="0.06"
                android:layout_marginRight="20dp"
                android:background="#0D1B2A"
                android:fontFamily="@font/manrope_semibold"
                android:text="Renters"
                android:textSize="20sp"
                android:textColor="@color/font"/>

            <Button
                android:id="@+id/btnLandlords"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/manrope_semibold"
                android:text="Landords"
                android:letterSpacing="0.06"
                android:background="#0D1B2A"
                android:textSize="20sp"
                android:textColor="@color/font"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnlogin"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="#0D1B2A"
                android:fontFamily="@font/manrope_semibold"
                android:letterSpacing="0.06"
                android:text="Login"
                android:textColor="@color/font"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnregister"
                android:layout_marginTop="16dp"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_input"
                android:fontFamily="@font/manrope_semibold"
                android:letterSpacing="0.03"
                android:text="Register"
                android:textColor="@color/background"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>