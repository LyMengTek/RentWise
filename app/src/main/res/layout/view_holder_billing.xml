<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_both"
        android:padding="18dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/calFloor"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/manrope_bold"
                        android:gravity="center"
                        android:text="Floor: 0"
                        android:textColor="@color/font"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/calRoom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/manrope_bold"
                        android:gravity="center"
                        android:text="Room: 0"
                        android:textColor="@color/font"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Electricity: "
                    android:textColor="@color/font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/calElectricityInput"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Water: "
                    android:textColor="@color/font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/calWaterInput"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="Other: "
                    android:textColor="@color/font"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/calOtherInput"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_input"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/manrope_semibold"
                    android:gravity="end"
                    android:text="Sep 30, 1832"
                    android:textColor="@color/font"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true">
                    <ImageView
                        android:id="@+id/calProfile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/bg_circle"
                        android:src="@mipmap/ic_person" />
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/calName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_semibold"
                    android:text="UserName"
                    android:letterSpacing="0.08"
                    android:textColor="@color/font"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <Button
                    android:id="@+id/calBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#0D1B2A"
                    android:fontFamily="@font/manrope_semibold"
                    android:letterSpacing="0.06"
                    android:text="Send"
                    android:textColor="@color/font"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

