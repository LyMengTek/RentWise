<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--    first block-->
        <RelativeLayout
            android:background="@color/pastel_purple"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Setting -->
            <LinearLayout
                android:id="@+id/backAccount"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/back"/>

                <TextView
                    android:layout_marginLeft="8dp"
                    android:letterSpacing="0.05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Rentwise's Account"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_below="@id/backAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="4dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/lymeng" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/profileUsername"
                    android:letterSpacing="0.03"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tek Lymeng"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:letterSpacing="0.03"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JC: 324234"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginRight="16dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/bg_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit"/>
                <TextView

                    android:letterSpacing="0.02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Edit"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_light"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileEmail"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email : Lymeng@gmail.com"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:letterSpacing="0.05" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_light"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number 1 : 077 525 243"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:letterSpacing="0.05" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_light"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number 2 : 071 533 233"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:letterSpacing="0.05" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_light"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <ImageView
               android:id="@+id/pictureCard"
               android:layout_margin="16dp"
               android:layout_width="wrap_content"
               android:layout_height="250dp"
               android:src="@drawable/id"/>

        </LinearLayout>

        <!-- Error Layout (overlayed on top of RecyclerView) -->
        <LinearLayout
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fail to load Data" />
        </LinearLayout>

        <!-- ProgressBar (overlayed on top of RecyclerView) -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

    </LinearLayout>




</ScrollView>
